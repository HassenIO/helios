<h1><%= t ".title", first_name: @user.first_name %></h1>
<hr/>

<% if @user.address.blank? ||
	@user.city.blank? ||
	@user.zip_code.blank? ||
	@user.country.blank? ||
	@user.license.blank? ||
	@user.birth_date.blank? ||
	@user.license_year.blank? %>
	
	<div class="alert">
		<p><%= t ".incomplete_profile.message" %> <%= link_to t(".incomplete_profile.link"), edit_user_registration_path, class: "base" %></p>
	</div>
	<hr/>
<% end %>

<div id="dashboard" class="row">
	<div class="span6">
		<div class="hero-unit">
			<p><%= link_to t(".travels.link"), travels_path, class: "base pull-right" %></p>
			<h3><%= t ".travels.title" %></h3>
			<p><%= t ".travels.requests", count: @travels.count %></p>
			<% if @next_travel.blank? %>
				<p><%= t ".travels.no_travels" %></p>
			<% else %>
				<p><%= t ".travels.next_travel", departure: l( @next_travel.departure, format: :long ), duration: distance_of_time_in_words(@next_travel.departure, @next_travel.arrival) %></p>
			<% end %>
		</div>
		<div class="hero-unit">
			<h3><%= t ".contact.title" %></h3>
			<p><%= t ".contact.phone" %> : +33 (0)1 73 79 27 21</p>
			<p><%= t ".contact.write_us" %> : contact@travelercar.com</p>
		</div>
	</div>
	<div class="span6">
		<div class="hero-unit">
			<p><%= link_to t(".rents.link"), search_path, class: "base pull-right" %></p>
			<h3><%= t ".rents.title" %></h3>
			<p><%= t ".rents.requests", count: @rents.count %></p>
			<% if @next_rent.blank? %>
				<p><%= t ".rents.no_rents" %></p>
			<% else %>
				<p><%= t ".rents.next_rent", start: l( @next_rent.startDate, format: :long ), duration: distance_of_time_in_words(@next_rent.startDate, @next_rent.endDate) %></p>
			<% end %>
		</div>
		<div class="hero-unit">
			<h3><%= t ".news.title" %></h3>
			<p>
				<a class="social facebook" href="https://www.facebook.com/TravelerCar">
					<i class="icon-facebook"></i>
				</a>
				<a class="social twitter" href="https://twitter.com/TravelerCar">
					<i class="icon-twitter"></i>
				</a>
				<a class="social gplus" href="https://plus.google.com/113031006436456237340">
					<i class="icon-google-plus"></i>
				</a>
				<a class="social linkedin" href="http://www.linkedin.com/company/travelercar">
					<i class="icon-linkedin"></i>
				</a>
			</p>
		</div>
	</div>
</div>
