

<%= filepicker_js_include_tag %>


<div class="row-fluid">
  <%= render 'form' %>
</div>

<div class="row-fluid">
  <div class="span12">
    <% if @travels.empty? %>
        <h3>Aucun résultat trouvé, modifiez les critères</h3>
    <% else %>
        <h3><%= @travels.length %> voitures trouvés au depart de <%= @rent.airPortName %> du <%= @rent.startDate %> au <%= @rent.endDate %></h3>
    <% end %>
  </div>
</div>

<% @travels.each do |travel| %>

    <div class="well">
      <div class="row-fluid">

        <div class="span6">
          <p>  <%= link_to travel.airPortName + ' - ' + travel.departure.to_s + ' -> ' + travel.arrival.to_s, user_travel_url( travel.user, travel, :rent => params[:rent])  %></p>

        </div>

        <div class="span6">
          <% if travel.car %>
              <% if travel.car.filepicker1_url %>
                  <%= filepicker_image_tag travel.car.filepicker1_url, width: 100, height: 100, fit: 'clip', class: 'pull-left' %>
              <% end %>
              <p> <%= travel.car.try { |car| car.year.to_s + ' -  '+ car.brand+ ' ' + car.model } %> </p>
              <p> <%= [travel.car.nbSeats, travel.car.fuel, travel.car.km].join(', ') %></p>
              <p> <%= travel.car.desc %></p>


          <% end %>
        </div>

      </div>
    </div>


<% end %>



