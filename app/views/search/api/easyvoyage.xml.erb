<?xml version="1.0" encoding="UTF-8"?>

<voitures>
	<% @travels.each do |travel| %>
	<voiture>
		<id><%= travel.id %></id>
		<nom><%= "#{travel.car.brand} #{travel.car.model}" %></nom>
		<photo><%= travel.car.filepicker1_url %></photo>
		<boite><%= (travel.car.transmission == "automatic") ? "automatique" : "manuelle" %></boite>
		<climatisation><%= (travel.car.hasAirConditioning) ? "oui" : "non" %></climatisation>
		<nbpassagers><%= travel.car.nbSeats %></nbpassagers>
		<description> <%= "#{travel.car.brand} #{travel.car.model} (#{travel.car.year}) #{travel.car.fuel}. " %> </description>
		<categorie><%= travel.car.category.name %></categorie>
		<prix><%= price_for_rent(@rent, category: travel.car.category).ceil %></prix>
		<url><%= api_redirect_url(@api.token, travel.id) %></url>
	</voiture>
	<% end %>
</voitures>