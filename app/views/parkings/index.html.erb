<h2>Réservez votre place de parking près de l'aéroport</h2>
<%= form_for @parking do |f| %>

	<div class="well well-blue row-fluid">
		<div class="span3">
			<div class="control-group">
				<%= f.label :airport, "Aéroport", :class => "control-label" %>
				<div class="controls">
					<%= f.select :airport, Parking.airports, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
		<div class="span3">
			<div class="control-group">
				<%= f.label :dropoff, "Date de dépôt du véhicule", :class => "control-label" %>
				<div class="controls">
					<div class="input-append date form_datetime" id="datetime-picker-dropoff">
						<%= f.text_field :dropoff, :class => "input-large", size: "16" %>
						<span class="add-on"><i class="icon-calendar"></i></span>
					</div>
				</div>
			</div>
		</div>
		<div class="span3">
			<div class="control-group">
				<%= f.label :pickup, "Date de reprise du véhicule", :class => "control-label" %>
				<div class="controls">
					<div class="input-append date form_datetime" id="datetime-picker-pickup">
						<%= f.text_field :pickup, :class => "input-large", size: "16" %>
						<span class="add-on"><i class="icon-calendar"></i></span>
					</div>
				</div>
			</div>
		</div>
		<div class="span3">
			<div class="control-group">
				<%= f.label :nb_people, "Nombre de personnes", :class => "control-label" %>
				<div class="controls">
					<%= f.select :nb_people, (15.downto(1).map{ |n| [n, n] } << ["Sélectionner un nombre", ""]).reverse, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<%= f.label :name, "Votre nom et prénom", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :name, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<%= f.label :email, "Votre adresse e-mail", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :email, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<%= f.label :phone, "Votre numéro de téléphone", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :phone, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<%= f.label :brand, "Marque du véhicule", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :brand, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<%= f.label :model, "Modèle du véhicule", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :model, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<%= f.label :year, "Année de premiére mise en circulation", :class => "control-label" %>
				<div class="controls">
					<%= f.select :year, ((1994..2014).map{ |a| [a, a] } << ["Sélectionner une année", ""]).reverse, :class => "input-large", size: "16" %>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<div class="control-group">
				<%= f.label :comment, "Un commentaire ?", :class => "control-label" %>
				<div class="controls">
					<%= f.text_area :comment, style: "width: 100%; height: 100px" %>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid text-center" style="margin-bottom: 80px;">
		<%= f.submit "Réserver mon parking", :class => "btn on-hover btn-large" %>
	</div>
	
<% end %>



<% content_for :footer do %>

    <script type="text/javascript">

        jQuery(function ($) {

            $("#datetime-picker-dropoff").on("changeDate", function(ev) {
				$("#datetime-picker-pickup").datetimepicker('show');
            });

        });

    </script>
<% end %>