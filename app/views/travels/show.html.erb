<h2><%= @travel.car.brand + ' - ' + @travel.car.model %></h2>

<%= link_to 'Edit', edit_user_travel_path(@user, @travel) %> |
<%= link_to 'Back', user_travels_path(@user) %>

<div class="row-fluid">

  <div class="span8">
    <div class="well">
      <% if @travel.car %>
          <% if @travel.car.filepicker1_url %>
              <%= filepicker_image_tag @travel.car.filepicker1_url %>
          <% end %>

      <% end %>
    </div>

  </div>

  <div class="span4">

    <div class="well">
    <h3>Louer cette voiture</h3>

      <p>
        <%= @travel.car.brand %> <%= @travel.car.model %>
      </p>

      <p>
        Entre le <%= @travel.departure %> et le <%= @travel.arrival %>
      </p>

      <p>
        Prix
      </p>



    </div>

  </div>


</div>

<h3>Details</h3>

<div class="well">
  <div class="row-fluid">
    <div class="span4">

      <p>
        <b>Aeroport :</b>
        <%= @travel.airPortName %>
      </p>

      <p>
        <b>Nombre de places assises :</b>
        <%= @travel.car.nbSeats %>
      </p>

      <p>
        <b>Kilométrage :</b>
        <%= @travel.car.km %>
      </p>

      <p>
        <b>Fuel :</b>
        <%= @travel.car.fuel %>
      </p>

    </div>

    <div class="span4">
      <p>
        <b>Fumeur autorisé ? </b>
        <%= @travel.car.isSmoker %>
      </p>

      <p>
        <b>Animaux acceptés ? </b>
        <%= @travel.car.acceptedPets %>
      </p>

      <p>
        <b>GPS ? </b>
        <%= @travel.car.hasGps %>
      </p>

      <p>
        <b>Climatisation ? </b>
        <%= @travel.car.hasAirConditioning %>
      </p>

      <p>
        <b>Musique ? </b>
        <%= @travel.car.hasCarRadio %>
      </p>

      <p>
        <b>Siège(s) enfant(s) ? </b>
        <%= @travel.car.hasChildSeat %>
      </p>

    </div>

    <div class="span4">
      <p>
        <%= @travel.car.desc %>
      </p>

    </div>

  </div>

</div>







