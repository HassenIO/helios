<h2><%= t(".title") %> </h2>

<% @travels.each do |travel| %>

    <div class="well">
      <div class="row-fluid">

        <div class="span6">
          <p>  <%= link_to travel.airPort.name + ' - ' + travel.departure.to_s + ' -> ' + travel.arrival.to_s, [@user, travel] %></p>

          <% if @user == current_user %>
              <%= link_to 'Annuler cette réservation', [@user, travel], method: :delete, data: {confirm: 'Are you sure?'} %>
              |
              <%= link_to 'Modifier cette réservation', edit_user_travel_path(@user, travel) %>
          <% end %>
        </div>

        <div class="span6">
          <div class="row-fluid">
            <% if travel.car %>
                <div class="span4">
                  <% if travel.car.filepicker1_url %>
                      <%= filepicker_image_tag travel.car.filepicker1_url, width: 100, height: 100, fit: 'clip', class: 'pull-left' %>
                  <% end %>
                </div>

                <div class="span8">
                  <p> <%= travel.car.try { |car| car.brand + ' ' + car.model } %> </p>
                </div>

            <% end %>
          </div>
        </div>

      </div>
    </div>


<% end %>

<br/>

<% if @user == current_user %>
    <%= link_to t(:register_travel), new_user_travel_path(@user) %>
<% end %>
