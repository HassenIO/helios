<div class="well">


  <div class="row-fluid">

    <div class="span9">
      <h1>Liste des catégories de véhicule</h1>
    </div>

    <div class="span3">
      <%= link_to 'Ajouter une catégorie', new_admin_category_path %>
    </div>
  </div>

  <div class="row-fluid">

    <div class="span4">
      <%= t("helpers.label.category.name") %>
    </div>

    <div class="span4">
      <%= t("helpers.label.category.price") %>
    </div>

    <div class="span4">
      Actions
    </div>

  </div>

  <hr>

  <% @categories.each do |category| %>
      <div class="row-fluid">

        <div class="span4">
          <%= link_to category.name, edit_admin_category_path(category) %>
        </div>

        <div class="span4">
          <%= category.price %>
        </div>

        <div class="span4">
          <%= link_to t(:show), admin_category_path(category) %> |
          <%= link_to t(:edit), edit_admin_category_path(category) %>
        </div>

      </div>
  <% end %>


</div>
