<div class="row-fluid login">

  <div class="span6 offset3">

    <h1><%= t(".title") %></h1>
    <div class="login-wrapper"><!--login-->

      <br/>
      <a href="<%= omniauth_authorize_path(:user, :facebook, tc_action: "login") %>" class="btn btn-facebook btn-large"><i class="icon-facebook"></i> | Se Connecter avec Facebook</a>


      <div class="separator">
        <h2>ou</h2>
        <hr/>
      </div>


      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "login-form"}) do |f| %>
          <div class="control-group">
            <div class="controls">
              <%= f.email_field :email, :autofocus => true, :placeholder => t("helpers.label.user.email") %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= f.password_field :password, :placeholder => t("helpers.label.user.password") %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <!--label class="checkbox">
                <input type="checkbox"> Se souvenir de moi
              </label-->
              <%= f.submit t(:login), :class => "btn on-hover btn-large btn-block" %>
            </div>
          </div>
      <% end %>

    </div>

    <hr/>
    <%= render "devise/shared/links" %>
  </div>
</div>


