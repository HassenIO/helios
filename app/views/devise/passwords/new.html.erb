<div class="row-fluid">

  <div class="span12">
    <h2><%= t(".title") %></h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => "form-horizontal well"}) do |f| %>

        <div class="control-group">
          <%= f.label :email, :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true, :placeholder => t("helpers.label.user.email") %>
          </div>

        </div>

        <div class="form-actions">
          <%= f.submit t(".send_new_password"), :class => "btn btn-primary" %>
        </div>


    <% end %>

  </div>
</div>

<%= render "devise/shared/links" %>
