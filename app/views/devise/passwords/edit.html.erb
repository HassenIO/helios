<div class="row-fluid login">

  <div class="span12">
    <h1><%= t(".title") %></h1>


    <div class="login-wrapper"><!--login-->

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => "login-form"}) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="control-group">
            <div class="controls">
              <%= f.password_field :password, :autofocus => true, :placeholder => t("helpers.label.user.new_password") %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= f.password_field :password_confirmation, :placeholder => t("helpers.label.user.password_confirmation") %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">

              <%= f.submit t(".change_password"), :class => "btn on-hover btn-large btn-block" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


<%= render "devise/shared/links" %>



