<div class="row-fluid">

  <div class="span12" style="text-align: center">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to t(:forgot_password), new_password_path(resource_name),:class => "base" %>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        | <%= link_to t(:no_receive_confirmation), new_confirmation_path(resource_name), :class => "base" %>

    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        | <%= link_to t(:no_receive_unlock_instructions), new_unlock_path(resource_name), :class => "base" %>

    <% end -%>

  </div>
</div>