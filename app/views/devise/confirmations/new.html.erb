<div class="row-fluid login">

  <div class="span12">
    <h1><%= t(".title") %></h1>


    <div class="login-wrapper"><!--login-->

      <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post, :class => "login-form"}) do |f| %>
          <div class="control-group">
            <div class="controls">
              <%= f.email_field :email, :autofocus => true, :placeholder => t("helpers.label.user.email") %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">

              <%= f.submit t(".resend_confirmation"), :class => "btn on-hover btn-large btn-block" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


<%= render "devise/shared/links" %>



