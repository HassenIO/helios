<a href="<%= omniauth_authorize_path(:user, :facebook) %>" class="btn btn-facebook btn-large"><i class="icon-facebook"></i> | S'inscrire avec Facebook</a>

<p style="font-size: 0.9em;"><br/>Nous nous engageons à ne rien poster sans votre permission.</p>

<div class="separator">
  <h2>ou</h2>
  <hr/>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "login-form"}) do |f| %>
    <!--sign-up-->
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :first_name, :placeholder => t("helpers.label.driver.first_name") %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :last_name, :placeholder => t("helpers.label.driver.last_name") %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :email, :placeholder => t("helpers.label.user.email") %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.password_field :password, :placeholder => t("helpers.label.user.password") %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.password_field :password_confirmation, :placeholder => t("helpers.label.user.password_confirmation") %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls" style="font-size: 0.9em; text-align: left">
        <%= check_box_tag 'signup-accept-cgu' %> J'accepte les <%= link_to "Conditions Générales d'Utilisation", "#{ENV['WP_ROOT']}/conditions-generales-dutilisation-cgu/", class: "base", target: "_about" %>.
      </div>
      <br/>
      <div class="controls">
        <div id="acceptance-is-necessary" class="alert alert-error hide" style="font-size: 0.8em; text-align: left">
          <a class="close" data-dismiss="alert" aria-hidden="true">×</a>
          Pour vous inscrire, vous devez accepter les Conditions Générales d'Utilisation en cochant la case ci-dessus.
        </div>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <!--<button type="submit" class="btn on-hover btn-large btn-block">Je valide et crée mon compte !</button>-->
        <%= f.submit id: "signup-button", value: "M'inscrire", :class => "btn on-hover btn-large btn-block" %>
      </div>
    </div>
<% end %>
<!--/sign-up-->
<br/>

<% content_for :footer do %>
  <script type="text/javascript">
    $(function () {

      $('#new_user').submit(function(e){
        if(!$("#signup-accept-cgu").is(":checked")) {
          $('#acceptance-is-necessary').css('display', 'block');
          e.preventDefault();
        }
      });

    });
  </script>
<% end %>
