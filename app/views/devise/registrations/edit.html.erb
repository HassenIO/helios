<div class="row-fluid">

  <div class="span12">
    <h2><%= t(".title") %></h2>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>


        <div class="row-fluid">

          <div class="span6">

            <fieldset class="well">
              <legend><%= t(".informations") %></legend>


              <div class="control-group">
                <%= f.label :first_name, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :first_name %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :last_name, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :last_name %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :email, :class => "control-label" %>
                <div class="controls">
                  <div class="input-prepend">
                    <span class="add-on"><i class="icon-envelope"></i></span>
                    <%= f.text_field :email %>
                  </div>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :password, :class => "control-label" %>
                <div class="controls">
                  <%= f.password_field :password %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :password_confirmation, :class => "control-label" %>
                <div class="controls">
                  <%= f.password_field :password_confirmation %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :current_password, :class => "control-label" %>
                <div class="controls">
                  <%= f.password_field :current_password %>
                  <span class="help-block"><%= t(".current_password_msg") %></span>
                </div>
              </div>

            </fieldset>
          </div>

          <div class="span6">
            <fieldset class="well">
              <legend><%= t(".address") %></legend>


              <div class="control-group">
                <%= f.label :address, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :address, :class => "span8" %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :city, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :city %>
                </div>
              </div>


              <div class="control-group">
                <%= f.label :zip_code, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :zip_code %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :country, :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :country %>
                </div>
              </div>


            </fieldset>
          </div>

        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="form-actions">
              <%= f.submit :class => "btn btn-primary" %>
            </div>
          </div>
        </div>

    <% end %>

  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <ul>
      <li><%= link_to t(".delete_account"), registration_path(resource_name),
                           :data => {:confirm => "Are you sure?"}, :method => :delete %></li>
    </ul>
  </div>
</div>
