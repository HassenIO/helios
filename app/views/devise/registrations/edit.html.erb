<h1><%= t(".title") %></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>

    <div class="row-fluid">
      <div class="span12">
        <h2><%= t(".title_user_informations") %> </h2>
      </div>
    </div>


    <fieldset name="User Information" class="well comment_form">
      <!--<legend><%= t(".informations") %></legend>-->

      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :first_name, :placeholder => t("helpers.label.user.first_name") %>
            </div>
          </div>
        </div>

        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :last_name, :placeholder => t("helpers.label.driver.last_name") %>
            </div>
          </div>
        </div>

        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.email_field :email, :placeholder => t("helpers.label.user.email") %>
            </div>
          </div>
        </div>
      </div>

    </fieldset>


    <% if resource.provider.nil? %>

        <div class="row-fluid">
          <div class="span12">
            <h2><%= t(".title_password_informations") %> </h2>
          </div>
        </div>


        <fieldset name="User Information" class="well comment_form">
          <!--<legend><%= t(".informations") %></legend>-->

          <div class="row-fluid">
            <div class="span4">
              <div class="control-group">
                <div class="controls">
                  <%= f.password_field :password, :placeholder => t("helpers.label.user.password") %>
                </div>
              </div>
            </div>

            <div class="span4">
              <div class="control-group">
                <div class="controls">
                  <%= f.password_field :password_confirmation, :placeholder => t("helpers.label.user.password_confirmation") %>
                </div>
              </div>
            </div>

            <div class="span4">
              <div class="control-group">
                <div class="controls">
                  <%= f.password_field :current_password, :placeholder => t("helpers.label.user.current_password") %>
                  <span class="help-block"><%= t(".current_password_msg") %></span>
                </div>
              </div>
            </div>
          </div>

        </fieldset>

    <% end %>



    <div class="row-fluid">
      <div class="span12">
        <h2><%= t(".title_driver_informations") %></h2>
      </div>
    </div>


    <fieldset name="User Information" class="well comment_form">
      <!--<legend><%= t(".informations") %></legend>-->

      <div class="row-fluid">
        <div class="span12">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :address, :class => "span12", :placeholder => t("devise.registrations.edit.address") %>
            </div>
          </div>
        </div>
      </div>


      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :city, :placeholder => t("helpers.label.user.city") %>
            </div>
          </div>
        </div>

        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :zip_code, :placeholder => t("helpers.label.user.zip_code") %>
            </div>
          </div>
        </div>

        <div class="span4">
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :country, :placeholder => t("helpers.label.user.country") %>
            </div>
          </div>
        </div>
      </div>

    </fieldset>


    <div class="row-fluid text-center" style="margin-bottom: 80px;">
      <div class="span12">
        <%= f.submit :class => "btn on-hover btn-large" %>
      </div>
    </div>

<% end %>





<div class="row-fluid">
  <div class="span12">
    <%= link_to t(".delete_account"), registration_path(resource_name),
                :data => {:confirm => "Are you sure?"}, :method => :delete, :class => "base" %>
  </div>
</div>
