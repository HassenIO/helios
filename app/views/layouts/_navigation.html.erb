<a href="<%= root_path %>" class="external brand image">
  <%= image_tag "travelercar-logo_small_image.png", :alt => "Logo" %>
</a>
<div class="nav-collapse collapse">
  <ul id="menu-primary-navigation" class="nav">
    <li>
      <%= link_to t(:register_travel), travels_path %>
    </li>
    <li>
      <%= link_to t(:rent_car), search_path %>
    </li>
    <li>
      <%= link_to t(:how_its_work),"#pourquoi-travelercar",  :class => "section" %>
    </li>
    <li>
      <%= link_to t(:help), "#besoin-daide" , :class => "section" %>
    </li>
    <% if user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle"
             data-toggle="dropdown"
             href="#">
            <%= t(:account) %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if current_user.has_role? :admin %>
                <li class="dropdown-submenu">
                  <a tabindex="-1" href="#"><%= t(:administration) %></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(:admin_travels), admin_travels_path %></li>
                    <li><%= link_to t(:admin_categories), admin_categories_path %></li>
                    <!--<li><%= link_to t(:admin_parkings), admin_travels_path %></li>-->
                    <li><%= link_to t(:admin_users), admin_users_path %></li>
                  </ul>
                </li>
            <% end %>
            <li>
              <%= link_to t(:my_informations), edit_user_registration_path %>
            </li>
            <li>
              <%= link_to t(:my_travels), user_travels_path(current_user) %>
            </li>
            <li>
              <%= link_to t(:my_rents), user_rents_path(current_user) %>
            </li>
            <li>
              <%= link_to t(:logout), destroy_user_session_path, :method => 'delete' %>
            </li>


          </ul>
        </li>
    <% else %>
        <li>
          <%= link_to t(:login), new_user_session_path %>
        </li>
        <li>
          <%= link_to t(:register), new_user_registration_path %>
        </li>
    <% end %>
  </ul>

</div>